{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_tab_Start": {
            "type": "panel",
            "label": "Main Settings",
            "items": {
                "header_Start": {
                    "type": "header",
                    "text": "Welcome to HS100",
                    "size": 2
                },
                "interval": {
                    "newLine": true,
                    "type": "number",
                    "label": "interval",
                    "min": 10,
                    "max": 360,
                    "default": 30,
                    "help": "Polling interval[sec]."
                },

                "warning": {
                    "type": "checkbox",
                    "label": "switch off the warning notification",
                    "help": "This disables notifications for devices that are not reachable.",
                    "default": false
                },
                "header_Devices": {
                    "type": "header",
                    "text": "monitoring Devices ",
                    "newLine": true,
                    "size": 2,
                    "style": {
                        "marginTop": 20
                    }
                },
                "text_DevicesInfo": {
                    "type": "staticText",
                    "label": "Add new devices by clicking the plus (+) symbol...",
                    "newLine": true,
                    "style": {
                        "fontSize": 16
                    }
                },
                "devices": {
                    "type": "table",
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "items": [
                        {
                            "type": "checkbox",
                            "attr": "active",
                            "width": "30px",
                            "title": "Active",
                            "default": true
                        },
                        {
                            "type": "text",
                            "title": "Device Name",
                            "attr": "name",
                            "maxLength": 50,
                            "trim": false,
                            "width": "55%",
                            "filter": true,
                            "sort": true,
                            "validator": "data.name.length > 1",
                            "validatorNoSaveOnError": true
                        },
                        {
                            "type": "text",
                            "title": "IP Address",
                            "attr": "ip",
                            "maxLength": 15,
                            "trim": true,
                            "width": "15%",
                            "validator": "data.ip != null && data.ip != undefined && data.ip.length > 5",
                            "validatorNoSaveOnError": true
                        },
                    ],
                },
            }
        }
    }
}
